{
  "name": "console-log-tracker",
  "displayName": "Console log tracker",
  "description": "Count, locate, comment, and delete console.log statements in your code.",
  "version": "0.1.0",
  "publisher": "CarlosSpagnoletti",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/cascharly/console-log-tracker"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Console Log Tracker",
      "properties": {
        "consoleLogTracker.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the console log tracking features."
        },
        "consoleLogTracker.methods": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "log",
              "warn",
              "error",
              "info",
              "debug",
              "table",
              "trace",
              "dir",
              "group"
            ]
          },
          "default": [
            "log",
            "warn",
            "error",
            "info"
          ],
          "description": "Select which console methods to track."
        },
        "consoleLogTracker.highlightColor": {
          "type": "string",
          "default": "#FFB471",
          "description": "Color for the highlight border of console logs."
        },
        "consoleLogTracker.debounceTimeout": {
          "type": "number",
          "default": 1000,
          "description": "Timeout in milliseconds to wait before rescanning after a change."
        },
        "consoleLogTracker.colors": {
          "type": "object",
          "default": {
            "log": "#FFB471",
            "warn": "#FFD700",
            "error": "#FF4D4D",
            "info": "#4DA6FF"
          },
          "description": "Custom colors for different console methods.",
          "properties": {
            "log": {
              "type": "string",
              "description": "Color for console.log"
            },
            "warn": {
              "type": "string",
              "description": "Color for console.warn"
            },
            "error": {
              "type": "string",
              "description": "Color for console.error"
            },
            "info": {
              "type": "string",
              "description": "Color for console.info"
            }
          }
        },
        "consoleLogTracker.keepHighlights": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, console logs will remain highlighted. If disabled, highlights only appear temporarily when requested."
        }
      }
    },
    "commands": [
      {
        "command": "extension.showMenu",
        "title": "Console Log Tracker: Show Menu"
      },
      {
        "command": "extension.nextLog",
        "title": "Console Log Tracker: Go to Next Log"
      },
      {
        "command": "extension.previousLog",
        "title": "Console Log Tracker: Go to Previous Log"
      },
      {
        "command": "extension.commentAllLogs",
        "title": "Console Log Tracker: Comment All Logs"
      },
      {
        "command": "extension.uncommentAllLogs",
        "title": "Console Log Tracker: Uncomment All Logs"
      },
      {
        "command": "extension.deleteAllLogs",
        "title": "Console Log Tracker: Delete All Logs"
      }
    ],
    "keybindings": [
      {
        "command": "extension.nextLog",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.previousLog",
        "key": "ctrl+shift+alt+l",
        "mac": "cmd+shift+alt+l",
        "when": "editorTextFocus"
      }
    ],
    "statusbar": [
      {
        "id": "consoleLogCounter.status",
        "alignment": "right",
        "priority": 100,
        "name": "$(list-unordered) Console Log Counter"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "10.0.10",
    "@types/node": "25.2.3",
    "@types/vscode": "1.107.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "2.5.2",
    "eslint": "^8.39.0",
    "glob": "13.0.2",
    "mocha": "11.7.5",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@vscode/vsce": "^2.19.0",
    "type-fest": "5.4.4",
    "zod": "4.3.6"
  }
}